<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SaleDetailsActivity">

    <TextView
            android:id="@+id/saleNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/locationOnImageButton"
            app:layout_constraintBottom_toBottomOf="@id/locationOnImageButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:text="Aquí va el título de la oferta"
            />

    <ImageButton
            android:id="@+id/locationOnImageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_baseline_location_on_24px"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="4dp"
            android:background="#0000"/>

    <TextView
            android:id="@+id/saleDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/locationOnImageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Esta es la descripción de la oferta! Es un texto muy largo, bla bla bla. Wena Lusho, el angry."
            />

    <TextView
            android:id="@+id/originalPriceTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/saleDescriptionTextView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Original price:"
            />

    <TextView
            android:id="@+id/originalPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/originalPriceTitleTextView"
            app:layout_constraintTop_toTopOf="@id/originalPriceTitleTextView"
            android:layout_marginStart="5dp"
            android:text="$3250"
            android:textStyle="bold"
            />

    <TextView
            android:id="@+id/offerPriceTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/originalPriceTitleTextView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Offer price:"
    />

    <TextView
            android:id="@+id/offerPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/offerPriceTitleTextView"
            app:layout_constraintTop_toTopOf="@id/offerPriceTitleTextView"
            android:layout_marginStart="5dp"
            android:text="$78000"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/discountOnPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/offerPriceTitleTextView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="-53%"
            android:textSize="30sp"
    />

    <ImageView
            android:id="@+id/imagePlaceholder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/discountOnPriceTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:alpha="0.15"
            android:src="@drawable/ic_baseline_photo_camera_24px"/>


</android.support.constraint.ConstraintLayout>